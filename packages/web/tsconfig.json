{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["dom", "esnext", "esnext.disposable"],
    "importHelpers": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@piston-ml/piston-web-wasm": ["../../target/pkg/piston-web"]
    },
    "preserveSymlinks": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "node"],
  },
  "include": ["src", "../../target/pkg/piston-web/piston-web.d.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
